<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se07.smart_ble.LoginActivity"
    android:gravity="center_vertical|center_horizontal"
    android:weightSum="1">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_email"
        android:hint="Email"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText_password"
        android:layout_below="@+id/editText_email"
        android:layout_alignStart="@+id/editText_email"
        android:hint="Password"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:layout_alignEnd="@+id/editText_email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/button_login"
        android:background="#3d8bcd"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/editText_password"
        android:layout_alignEnd="@+id/editText_password"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/editText_password"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button_register"
        android:background="#58b957"
        android:layout_below="@+id/button_login"
        android:layout_alignStart="@+id/button_login"
        android:layout_alignEnd="@+id/button_login"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="* Can not login, please try again"
        android:id="@+id/textView_loginAlert"
        android:layout_below="@+id/button_register"
        android:layout_alignStart="@+id/button_register"
        android:layout_marginTop="10dp"
        android:textColor="#ff0000" />

</RelativeLayout>
